<% layout('./layout/boilerplate') -%>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card text-center mb-3">
                <img src="<%= product.img %>" class="card-img-top" alt="">
                <div class="card-title">
                    <h5 class="card-title">
                        <%= product.name %>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Price: â‚©<%= product.price %></li>
                    <li class="list-group-item">Quantity: <%= product.qty %></li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-success" href="/products/<%= product._id %>/edit">Edit</a>
                    <form class="d-inline" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="/products">Back All products</a>
                </div>
            </div>
        </div>
    </div>